@model InventoryApp.Dto.Register
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<InventoryApp.Infrastructure.SharedResource> L

@{
  ViewData["Title"] = L["RegisterTitle"];
  var returnUrl = (string)(ViewBag.ReturnUrl ?? "/");
}
<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-5">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h1 class="h4 mb-3 text-center">@L["RegisterTitle"]</h1>

        <form method="post" asp-action="RegisterPost" asp-controller="Auth">
          @Html.AntiForgeryToken()
          <input type="hidden" name="returnUrl" value="@returnUrl" />
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>

          <div class="mb-3">
            <label class="form-label">@L["DisplayName"]</label>
            <input asp-for="DisplayName" class="form-control" />
            <span asp-validation-for="DisplayName" class="text-danger"></span>
          </div>

          <div class="mb-3">
            <label class="form-label">@L["Email"]</label>
            <input asp-for="Email" class="form-control" autocomplete="username" />
            <span asp-validation-for="Email" class="text-danger"></span>
          </div>

          <div class="mb-3">
            <label class="form-label">@L["Password"]</label>
            <input asp-for="Password" class="form-control" autocomplete="new-password" />
            <span asp-validation-for="Password" class="text-danger"></span>
          </div>

          <div class="mb-3">
            <label class="form-label">@L["ConfirmPassword"]</label>
            <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
          </div>

          <button type="submit" class="btn btn-primary w-100 mb-3">@L["SignUp"]</button>
        </form>

        <div class="text-center text-muted my-2">@L["Or"]</div>

        <form method="post" action="/auth/external">
          @Html.AntiForgeryToken()
          <input type="hidden" name="returnUrl" value="@returnUrl" />
          <button class="btn btn-outline-danger w-100" type="submit" name="provider" value="Google">
            @L["ContinueWithGoogle"]
          </button>
        </form>

        <div class="mt-3">
          <a href="/auth/login?returnUrl=@Uri.EscapeDataString(returnUrl)">
            @L["AlreadyHaveAccount"] @L["Login"]
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
